{
    "config": {
        "enable_webhooks": false,
        "webhook_address": "https://webhooks.com/webhook",
        "zip_types": [
            ".tar.gz",
            ".bz2",
            ".zip"
        ]
    },
    "vars": {
        "DATA_DIR": "./data"
    },
    "defaults": {
        "name": "ENTRY",
        "source": "",
        "destination": "/backups",
        "clean_up": false,
        "clean_up_source": false,
        "keep": 1,
        "audit": true,
        "oldest": 0
    },
    "jobs": [
        {
            "name": "Dev Backup",
            "source": [
                "${DATA_DIR}/src/test_data",
                "${DATA_DIR}/src/test_data copy",
                "${DATA_DIR}/src/text.txt"
            ],
            "destination": "${DATA_DIR}/dest",
            "clean_up": true,
            "clean_up_source": true
        },
        {
            "name": "Dev Backup 2",
            "source": [
                "${DATA_DIR}/src"
            ],
            "destination": "${DATA_DIR}/dest",
            "clean_up": true,
            "clean_up_source": true
        },
        {
            "name": "Dev Backup 3",
            "source": [
                "${DATA_DIR}/src"
            ],
            "destination": "${DATA_DIR}/dest",
            "clean_up": true,
            "clean_up_source": true
        },
        {
            "name": "Dev Backup 4",
            "source": [
                "${DATA_DIR}/src"
            ],
            "destination": "${DATA_DIR}/dest",
            "clean_up": true,
            "clean_up_source": true
        }
    ]
}